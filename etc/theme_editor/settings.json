      "order": 2,
      "settings": [
        {
          "id": "container_width",
          "label":  "6Ô∏è‚É£ Container Max Width",
          "type": "select",
          "default": "1280px",
          "options":  [
            {"value": "800px", "label": "Narrow (800px)"},
            {"value": "1024px", "label": "Medium (1024px)"},
            {"value": "1280px", "label": "Wide (1280px)"},
            {"value": "1536px", "label": "Extra Wide (1536px)"},
            {"value": "100%", "label": "Full Width"}
