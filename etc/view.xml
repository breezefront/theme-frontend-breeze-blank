    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="mode">default</var> <!-- default/expanded -->
            <var name="allowfullscreen">true</var>
            <var name="keyboard">true</var>
            <var name="loop">true</var>
            <var name="nav">thumbs</var> <!-- false/thumbs/dots -->
            <var name="navdir">horizontal</var> <!-- horizontal/vertical -->
            <var name="caption">false</var> <!-- true/false -->
        </var>
        <var name="magnifier">
            <var name="enabled">false</var> <!-- true/false -->
            <var name="mode">auto</var> <!-- auto(stage with fallback to lens)/stage/lens -->
            <var name="zoom">auto</var> <!-- auto or number. When using number, consider changing upscale option. -->
            <var name="zoomMin">1.6</var> <!-- min zoom to use, otherwise - disable magnifier. -->
            <var name="zoomMax">2.5</var> <!-- max zoom to use, otherwise - downscale the image. -->
            <var name="upscale">1.5</var> <!-- max upscale to satisfy zoomMin. -->
            <var name="stage">
                <var name="position">right</var> <!-- left/right/inner -->
                <var name="width">100w</var> <!-- number or percent of width/height -->
                <var name="height">100h</var> <!-- number or percent of width/height -->
            </var>
            <var name="lens">
                <var name="shape">circle</var> <!-- rectangle/circle -->
                <var name="width">180</var> <!-- number -->
                <var name="height">180</var> <!-- number -->
            </var>
        </var>
    </vars>
    <vars module="Magento_ConfigurableProduct">
        <var name="gallery_switch_strategy">prepend</var> <!-- prepend/replace -->
    </vars>
    <vars module="Swissup_Breeze">
        <var name="enabled">1</var>
        <var name="responsive_images">1</var>
        <var name="sizes">
            <var name="category_page_grid"><![CDATA[
                (min-width: 1280px) 236px,
                (min-width: 1024px) calc((100vw - 220px - 6rem) / 4),
                (min-width: 768px) calc((100vw - 180px - 4rem) / 3),
                (min-width: 640px) calc((100vw - 3rem) / 3),
                calc((100vw - 2rem) / 2)
            ]]></var>
            <var name="category_page_grid-1column"><![CDATA[
                (min-width: 1280px) 236px,
                (min-width: 1024px) calc((100vw - 5rem) / 5),
                (min-width: 768px) calc((100vw - 4rem) / 4),
                (min-width: 640px) calc((100vw - 3rem) / 3),
                calc((100vw - 2rem) / 2)
            ]]></var>
            <var name="category_page_grid-cms-full-width">use:category_page_grid-1column</var>
            <var name="category_page_grid-3columns"><![CDATA[
                (min-width: 1280px) 236px,
                (min-width: 1024px) calc((100vw - 440px - 7rem) / 3),
                (min-width: 768px) calc((100vw - 180px - 4rem) / 3),
                (min-width: 640px) calc((100vw - 3rem) / 3),
                calc((100vw - 2rem) / 2)
            ]]></var>
            <var name="category_page_list"><![CDATA[
                (min-width: 1280px) 270px,
                (min-width: 1024px) calc((100vw - 220px - 3.75rem) * 0.28),
                (min-width: 768px) calc((100vw - 180px - 2.75rem) * 0.28),
                calc((100vw - 1.75rem) * 0.28)
            ]]></var>
            <var name="category_page_list-1column"><![CDATA[
                (min-width: 1024px) 270px,
                calc((100vw - 1.75rem) * 0.28)
            ]]></var>
            <var name="category_page_list-cms-full-width">use:category_page_list-1column</var>
            <var name="category_page_list-3columns"><![CDATA[
                (min-width: 1280px) 207px,
                (min-width: 1024px) calc((100vw - 440px - 5.75rem) * 0.28),
                (min-width: 768px) calc((100vw - 180px - 2.75rem) * 0.28),
                calc((100vw - 1.75rem) * 0.28)
            ]]></var>
            <var name="product_page_image_medium"><![CDATA[
                (min-width: 1280px) 614px,
                (min-width: 768px) calc((100vw - 2rem) / 2),
                calc(100vw - 1rem)
            ]]></var>
            <var name="product_page_image_small">88px</var>
            <var name="cart_page_product_thumbnail"><![CDATA[
                (min-width: 1280px) 223px,
                (min-width: 1024px) calc((100vw - 2rem - 420px - 190px) * 0.4),
                (min-width: 768px) calc((100vw - 2rem - 220px - 190px) * 0.4),
                calc((100vw - 1rem - 190px) * 0.4)
            ]]></var>
            <var name="cart_cross_sell_products">use:category_page_grid-1column</var>
            <var name="new_products_content_widget_grid">use:category_page_grid</var>
        </var>
    </vars>
